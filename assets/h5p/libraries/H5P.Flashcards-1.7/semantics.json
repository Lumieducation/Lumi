        {
          "name": "imageAltText",
          "type": "text",
          "label": "Alternative text for image",
          "importance": "high",
          "optional": true
        },
        {
          "name": "tip",
          "type": "group",
          "label": "Tip",
          "importance": "low",
          "optional": true,
          "fields": [
            {
              "name": "tip",

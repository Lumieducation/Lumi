        "label": "Start date",
        "description": "Start date of the event (please use the format yyyy/mm/dd)",
        "placeholder": "2020/05/18",
        "regexp": {
          "pattern": "^[0-9]{4,}/0*([1-9]|1[0-2])/0*([1-9]|[12][0-9]|3[01])$",
          "modifiers": ""

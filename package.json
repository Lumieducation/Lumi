{
  "name": "lumi",
  "version": "1.0.0-beta.4",
  "private": true,
  "main": "build/src/main.js",
  "description": "A tool to create and display interactive content with H5P",
  "scripts": {
    "start": "npx electron .",
    "build": "rm -rf build/ && npx tsc",
    "build:mac": "npm run build && npx electron-builder --config builder.config.js --mac --publish never",
    "build:linux": "npm run build && ./builder-configs/build.linux.sh --publish never",
    "build:mac:dev": "CSC_IDENTITY_AUTO_DISCOVERY=false npm run build:mac",
    "build:win": "npm run build && cp -r assets/appx build && builder-configs\\build.win.bat --publish never && rm -rf build/appx",
    "build:win32": "npm run build && cp -r assets/appx build && npx --no-install electron-builder --config builder.config.js --windows nsis --publish never --ia32 && rm -rf build/appx",
    "publish:mac": "npx --no-install electron-builder --config builder.config.js --mac --publish always",
    "publish:win": "cp -r assets/appx build && builder-configs\\build.win.bat --publish always && rm -rf build/appx",
    "publish:linux": "npm run build && ./builder-configs/build.linux.sh --publish always",
    "translate:scan": "npx i18next-scanner --config config/i18next-scanner.config.cjs",
    "localize": "json-autotranslate -f -d --directory-structure ngx-translate -c google_translate.json -s google-translate -i assets/translations  -m i18next && prettier --write \"assets/translations/*.json\"",
    "translate": "npm run translate:scan && npm run localize",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "eslint --fix \"src/**/*.{js,jsx,ts,tsx}\"",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx}\"",
    "semantic-release": "npx semantic-release",
    "release": "electron-builder --publish always"
  },
  "author": {
    "name": "Lumi Education UG (hb)",
    "email": "c@Lumi.education"
  },
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Lumieducation/Lumi.git"
  },
  "devDependencies": {
    "@commitlint/cli": "19.7.1",
    "@commitlint/config-conventional": "19.7.1",
    "@semantic-release/git": "10.0.1",
    "electron": "34.2.0",
    "electron-builder": "25.1.8",
    "eslint": "8.57.1",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "17.1.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.9.0",
    "eslint-plugin-perfectionist": "2.11.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-react": "7.34.3",
    "eslint-plugin-react-hooks": "4.6.2",
    "eslint-plugin-unused-imports": "3.2.0",
    "husky": "9.1.7",
    "i18next-scanner": "4.6.0",
    "json-autotranslate": "1.14.5",
    "prettier": "3.5.2",
    "semantic-release": "24.2.3",
    "typescript": "5.6.3"
  },
  "dependencies": {
    "@lumieducation/h5p-express": "9.3.3",
    "@lumieducation/h5p-html-exporter": "9.3.3",
    "@lumieducation/h5p-server": "9.3.3",
    "bunyan": "1.8.15",
    "electron-updater": "6.3.9",
    "express": "4.21.2",
    "express-fileupload": "1.5.1",
    "express-serve-static-core": "0.1.1",
    "fs-extra": "11.3.0",
    "i18next": "23.16.5",
    "i18next-http-middleware": "3.6.0",
    "i18next-node-fs-backend": "2.1.3",
    "simple-scorm-packager": "0.2.7",
    "socket.io": "4.8.1"
  },
  "publish": {
    "provider": "github",
    "owner": "Lumieducation",
    "repo": "Lumi"
  }
}

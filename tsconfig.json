{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "allowJs": true,
        "resolveJsonModule": true,
        "outDir": "./build/server",
        "sourceMap": true
    },
    "exclude": ["node_modules"],
    "include": ["server/src/**/*.ts"],
    "preset": "ts-jest"
}

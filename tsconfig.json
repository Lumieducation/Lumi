{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "baseUrl": "./",
    "resolveJsonModule": true,
    "declaration": true,
    "paths": {
      "src/*": ["src/*"],
      "test/*": ["test/*"]
    },
    "outDir": "./build"
  },
  "exclude": ["node_modules", "build", "commitlint.config.cjs"],
  "include": ["**/*.ts", "**/*.tsx", "src/**/*"]
}

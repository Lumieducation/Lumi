{
    "extends": [
        "tslint:latest",
        "tslint-config-airbnb",
        "tslint-react",
        "tslint-config-prettier"
    ],
    "rules": {
        "typedef": [
            true,
            "call-signature",
            "parameter",
            "property-declaration",
            "member-variable-declaration"
        ],
        "no-submodule-imports": [false, "@material-ui"],
        "import-name": false,
        "function-name": false,
        "no-empty-interface": false,
        "jsx-no-lambda": false,
        "no-implicit-dependencies": [
            true,
            "dev",
            ["lib", "state", "components", "client"]
        ],
        "member-ordering": [
            true,
            {
                "order": [
                    "public-constructor",
                    "private-constructor",
                    "public-static-field",
                    "private-static-field",
                    "public-instance-field",
                    "private-instance-field",
                    "public-static-method",
                    "private-static-method",
                    "public-instance-method",
                    "private-instance-method"
                ],
                "alphabetize": true
            }
        ]
    }
}
